#include <stdio.h>
#include <stdlib.h>

typedef unsigned char **tMatrice;

/* Reutilisation de MatAllouer */
tMatrice MatAllouer(int NbLig, int NbCol) {
    unsigned char *elements;
    tMatrice tab;
    int i;

    elements = (unsigned char *) malloc(NbLig * NbCol * sizeof(unsigned char));
    if (elements == NULL) return NULL;

    tab = (tMatrice) malloc(NbLig * sizeof(unsigned char *));
    if (tab == NULL) {
        free(elements);
        return NULL;
    }

    for (i = 0; i < NbLig; i++) {
        tab[i] = elements + i * NbCol;
    }

    return tab;
}

/* Reutilisation de MatLiberer */
void MatLiberer(tMatrice *pMat) {
    if (*pMat != NULL) {
        free((*pMat)[0]);
        free(*pMat);
        *pMat = NULL;
    }
}

/* Remplit le triangle de Pascal */
tMatrice Triangle(int n) {
    tMatrice A;
    int i, j;

    A = MatAllouer(n, n);
    if (A == NULL) return NULL;

    for (i = 0; i < n; i++) {
        A[i][0] = 1;
        A[i][i] = 1;
        for (j = 1; j < i; j++) {
            A[i][j] = A[i - 1][j - 1] + A[i - 1][j];
        }
    }
    return A;
}

/* Affichage du triangle */
void AffTriangle(tMatrice A, int NbLig) {
    int i, j;
    for (i = 0; i < NbLig; i++) {
        for (j = 0; j <= i; j++) {
            printf("%3d ", A[i][j]);
        }
        printf("\n");
    }
}

/* Programme principal */
int main() {
    int n;
    tMatrice T;

    printf("Nombre de lignes du triangle de Pascal : ");
    scanf("%d", &n);

    T = Triangle(n);
    if (T == NULL) {
        printf("Erreur d'allocation\n");
        return 1;
    }

    printf("\nTriangle de Pascal :\n");
    AffTriangle(T, n);

    MatLiberer(&T);

    return 0;
}


#include <stdio.h>

void Trier(int Tab[], int NbElts) {
    int i, j, tmp;
    for (i = NbElts - 1; i > 0; i--) {
        for (j = 0; j < i; j++) {
            if (Tab[j + 1] < Tab[j]) {
                tmp = Tab[j];
                Tab[j] = Tab[j + 1];
                Tab[j + 1] = tmp;
            }
        }
    }
}

void Aff(int Tab[], int NbElts) {
    int i;
    for (i = 0; i < NbElts; i++) {
        printf("%d ", Tab[i]);
    }
    printf("\n");
}

void TrierPtr(int Tab[], int NbElts, int *Ptr[]) {
    int i, j;
    int *tmp;

    for (i = 0; i < NbElts; i++) {
        Ptr[i] = &Tab[i];
    }

    for (i = NbElts - 1; i > 0; i--) {
        for (j = 0; j < i; j++) {
            if (*Ptr[j + 1] < *Ptr[j]) {
                tmp = Ptr[j];
                Ptr[j] = Ptr[j + 1];
                Ptr[j + 1] = tmp;
            }
        }
    }
}

void AffPtr(int *TabP[], int NbElts) {
    int i;
    for (i = 0; i < NbElts; i++) {
        printf("%d ", *TabP[i]);
    }
    printf("\n");
}

int main() {
    int Tab[5] = {8, 3, 5, 1, 4};
    int *TabPtr[5];

    printf("-- Tri normal --\n");
    Trier(Tab, 5);
    Aff(Tab, 5);

    printf("-- Tri par pointeurs --\n");
    TrierPtr(Tab, 5, TabPtr);
    AffPtr(TabPtr, 5);

    return 0;
}